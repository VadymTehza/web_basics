// .vscode/launch.json â€” C# (.NET) debug configurations
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: <project-name> Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/<relative-path-to-project-folder><project-name>.csproj"
        },
        {
            "name": "Net Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            // Build task is recommended; ensure a matching task exists in tasks.json
            "preLaunchTask": "build",
            // Adjust target framework if needed (net6.0, net7.0, net8.0, etc.)
            "program": "${microsoft edge}/bin/Debug/net6.0/$microsoft edge}.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": true
        },
        {
            "name": ".NET Attach to Process",
            "type": "coreclr",
            "request": "attach",
            // Prompts to pick a running process to attach the debugger to
            "processId": "${command:pickProcess}",
            "justMyCode": true
        }
    ]
}